{
  "dashboard": {
    "title": "Ampel Overview",
    "tags": ["ampel", "overview"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "HTTP Request Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_requests_total[5m])",
            "legendFormat": "{{method}} {{path}}"
          }
        ],
        "gridPos": {
          "x": 0,
          "y": 0,
          "w": 12,
          "h": 8
        }
      },
      {
        "id": 2,
        "title": "HTTP Request Duration (p95)",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "p95 {{path}}"
          }
        ],
        "gridPos": {
          "x": 12,
          "y": 0,
          "w": 12,
          "h": 8
        }
      },
      {
        "id": 3,
        "title": "HTTP Status Codes",
        "type": "stat",
        "targets": [
          {
            "expr": "sum by (status) (rate(http_requests_total[5m]))",
            "legendFormat": "{{status}}"
          }
        ],
        "gridPos": {
          "x": 0,
          "y": 8,
          "w": 8,
          "h": 6
        }
      },
      {
        "id": 4,
        "title": "Database Connections",
        "type": "graph",
        "targets": [
          {
            "expr": "pg_stat_database_numbackends",
            "legendFormat": "{{datname}}"
          }
        ],
        "gridPos": {
          "x": 8,
          "y": 8,
          "w": 8,
          "h": 6
        }
      },
      {
        "id": 5,
        "title": "Active Pull Requests",
        "type": "stat",
        "targets": [
          {
            "expr": "ampel_pull_requests_total{status=\"open\"}",
            "legendFormat": "Open PRs"
          }
        ],
        "gridPos": {
          "x": 16,
          "y": 8,
          "w": 8,
          "h": 6
        }
      }
    ],
    "schemaVersion": 27,
    "version": 1
  }
}
